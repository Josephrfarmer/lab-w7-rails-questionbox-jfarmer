<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<div class="container">
<nav class="navbar navbar-dark bg-dark">
<div class="d-flex flex-column bd-highlight mb-3">
<div class="p-2 bd-highlight"><h1 class="text-success">Welcome to Jarvis</h1></div>
<div class="p-2 bd-highlight"><h3 class="text-success">A Place For Answers</h3></div>
</div>
<%=render 'header', post: @question %>
</nav>
</div>

<div class ="container">
  <div>
  <% @questions.each do |question| %>
    <div>
        <div class="container-fluid"><%= question.body %></div>
        <div class="btn-group">
        <div><%= link_to 'Show', question, class:"btn btn-outline-success btn-sm btn btn-secondary" %></div>
        <%if (logged_in?) && (current_user.id === question.user_id) %>
        <div><%= link_to 'Edit', edit_question_path(question), class:"btn btn-outline-secondary btn-sm btn btn-secondary" %></div>
        <%end%>
        <%if (logged_in?) && (current_user.id === question.user_id) %>
        <%= link_to 'Delete', question, method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-outline-danger btn-sm btn btn-secondary" %>
        <%end%>
        </div>
    </div>
  <% end %>
  <%= paginate @questions %>
  <%= page_entries_info @questions %>
  </div>
</div>