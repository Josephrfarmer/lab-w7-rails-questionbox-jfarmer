<%=render 'header', post: @questions %>
<p id="notice"><%= notice %></p>

<p>
  <strong>body:</strong>
  <%= @question.body %>
</p>

<% if current_user %>
  <%= form_with(url: answers_path, local: true) do |form| %>
    <%= form.text_area :body %>
    <%= form.hidden_field :user_id, :value => current_user.id %>
    <%= form.hidden_field :question_id, :value => @question.id %>
    <%= form.submit %>
   <% end %>
<% end %>

<% @answers.each do |answer| %>
    <div>
        <div><%= answer.body %></div>
        <div><%= link_to 'Show', answer %></div>
        <div><%= link_to 'Edit', edit_answer_path(answer) %></div>
        <%= link_to 'Delete', answer, method: :delete, data: {confirm: 'Are you sure?'} %>
    </div>
  <% end %>

<%= link_to 'Back', root_path %>