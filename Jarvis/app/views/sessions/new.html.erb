<div class="container">
<body class="text-center">
  
     <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <div class="col-4 container">
      <%= form_with(url: session_path) do |form| %>
        <%= form.label :username, class:"sr-only" %>
        <%= form.text_field :username, :placeholder => 'username', class:"form-control" %>
        <%= form.label :password, class:"sr-only" %>
        <%= form.password_field :password, class:"form-control"%>
      <%= submit_tag "Log-In", class:"btn btn-lg btn-primary btn-block"%>
      </div>
      <p class="mt-5 mb-3 text-muted">Jarvis &copy; 2018</p>
      <% end %>
 
</body>
</div>